/* -----------------------------------------------------------------------------
 *
 * Filter Button
 *
 * ----------------------------------------------------------------------------- */

.tribe-events {

	.tribe-events-c-events-bar__filter-button-container {
		margin-right: var(--spacer-1);

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-vertical& {
			@mixin hidden;
		}
	}

	.tribe-events-header--has-event-search .tribe-events-c-events-bar__filter-button-container {

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			flex: none;
			margin: var(--spacer-2) 0;
		}
	}

	.tribe-events-c-events-bar__filter-button {
		display: block;
		padding: var(--spacer-0);
		position: relative;

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			padding: var(--spacer-1);
		}
	}

	.tribe-events-header--has-event-search .tribe-events-c-events-bar__filter-button {

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			align-items: center;
			display: flex;
			margin: calc(var(--spacer-2) * -1) 0;
			padding: var(--spacer-4) var(--spacer-5);
		}
	}

	.tribe-events-c-events-bar__filter-button-icon {
		display: block;
		height: 21px;
		width: 21px;

		path {
			fill: currentColor;
		}

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			flex: none;
			height: 23px;
			padding: 1px;
			width: 23px;
		}
	}

	.tribe-events-header--has-event-search .tribe-events-c-events-bar__filter-button-icon {

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			flex: none;
			height: 14px;
			width: 14px;
		}
	}

	.tribe-events-header--has-event-search .tribe-events-c-events-bar__filter-button-text {

		.tribe-common--breakpoint-medium.tribe-events--filter-bar-horizontal& {
			@mixin visually-show;

			flex: none;
			margin-left: var(--spacer-1);
		}
	}
}
