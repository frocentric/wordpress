{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock",
    "roots",
    "wordpress",
    "stack",
    "composer",
    "vagrant",
    "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist",
    "allow-plugins": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wp-languages.github.io"
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "kinsta/kinsta-mu-plugins",
        "type": "wordpress-muplugin",
        "version": "3.0.0",
        "dist": {
          "url": "https://kinsta.com/kinsta-tools/kinsta-mu-plugins.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/the-events-calendar-community-events",
        "version": "4.10.18",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-ce?version={%VERSION}&key={%TEC_CE_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/the-events-calendar-community-events-tickets",
        "version": "4.9.6",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-ct?version={%VERSION}&key={%TEC_CT_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/events-tickets-plus",
        "version": "5.10.2",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-etp?version={%VERSION}&key={%TEC_ETP_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/events-calendar-pro",
        "version": "6.5.0",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-ecp?version={%VERSION}&key={%TEC_PRO_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/the-events-calendar-filterbar",
        "version": "5.5.4",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-fbar?version={%VERSION}&key={%TEC_FB_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "package",
      "package": {
        "name": "modern-tribe/events-virtual",
        "version": "1.15.8",
        "type": "wordpress-plugin",
        "dist": {
          "url": "https://evnt.is/fetch-ve?version={%VERSION}&key={%TEC_VE_LICENSE}",
          "type": "zip"
        }
      },
      "require": {
        "ffraenz/private-composer-installer": "^5.0"
      }
    },
    {
      "type": "composer",
      "url": "https://wp-languages.github.io",
      "only": [
        "koodimonni-language/*",
        "koodimonni-plugin-language/*",
        "koodimonni-theme-language/*"
      ]
    }
  ],
  "require": {
    "composer/installers": "^2.0",
    "ffraenz/private-composer-installer": "^5.0",
    "humanmade/s3-uploads": "^3.0",
    "ingenyus/configure-environment-plugins": "^2.0",
    "johnpbloch/wordpress": "^6.0",
    "kinsta/kinsta-mu-plugins": "^3.0",
    "koodimonni-language/en_gb": "*",
    "modern-tribe/events-calendar-pro": "*",
    "modern-tribe/events-tickets-plus": "*",
    "modern-tribe/events-virtual": "*",
    "modern-tribe/the-events-calendar-community-events": "*",
    "modern-tribe/the-events-calendar-community-events-tickets": "*",
    "modern-tribe/the-events-calendar-filterbar": "*",
    "oscarotero/env": "^2.1.0",
    "php": ">=5.6",
    "roots/bedrock-autoloader": "^1.0",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.2.0",
    "vlucas/phpdotenv": "^5.3",
    "wpackagist-plugin/authors-list": "^2.0",
    "wpackagist-plugin/autodescription": "^5.0",
    "wpackagist-plugin/classic-editor": "^1.0",
    "wpackagist-plugin/cloudflare": "^4.0",
    "wpackagist-plugin/customizer-export-import": "^0.9",
    "wpackagist-plugin/disable-emails": "^1.0",
    "wpackagist-plugin/dynamic-visibility-for-elementor": "^5.0",
    "wpackagist-plugin/easy-theme-and-plugin-upgrades": "^2.0",
    "wpackagist-plugin/ele-custom-skin": "^3.0",
    "wpackagist-plugin/elementor": "^3.0",
    "wpackagist-plugin/enable-media-replace": "^4.0",
    "wpackagist-plugin/event-tickets": "^5.0",
    "wpackagist-plugin/essential-addons-for-elementor-lite": "^5.0",
    "wpackagist-plugin/feedzy-rss-feeds": "^4.0",
    "wpackagist-plugin/granular-controls-for-elementor": "^1.0",
    "wpackagist-plugin/hivepress": "^1.0",
    "wpackagist-plugin/imagify": "^2.0",
    "wpackagist-plugin/jetpack": "^13.0",
    "wpackagist-plugin/lightweight-grid-columns": "^1.0",
    "wpackagist-plugin/log-emails": "^1.0",
    "wpackagist-plugin/meta-box": "^5.0",
    "wpackagist-plugin/ninja-forms": "^3.0",
    "wpackagist-plugin/ninja-forms-addon-manager": "^3.0",
    "wpackagist-plugin/plausible-analytics": "^2.0",
    "wpackagist-plugin/pods": "^3.0",
    "wpackagist-plugin/publishpress": "^4.0",
    "wpackagist-plugin/query-monitor": "^3.0",
    "wpackagist-plugin/search-filter": "^1.2",
    "wpackagist-plugin/svg-support": "^2.0",
    "wpackagist-plugin/the-events-calendar": "^6.0",
    "wpackagist-plugin/wordpress-importer": "0.*",
    "wpackagist-plugin/wpm-user-sync": "^1.0",
    "wpackagist-plugin/wp-discourse": "^2.0",
    "wpackagist-plugin/wp-mail-smtp": "^4.0",
    "wpackagist-theme/generatepress": "^3.0",
    "wp-media/wp-rocket": "^3.0"
  },
  "require-dev": {
    "slevomat/coding-standard": "^8.0",
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "phpcompatibility/phpcompatibility-wp": "*",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "*",
    "codeception/codeception": "^5.1",
    "codeception/module-phpbrowser": "*",
    "codeception/module-asserts": "*",
    "codeception/verify": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "Frocentric\\": "web/app/plugins/frocentric/includes/"
    }
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "dropin-paths": {
      "web/app/languages/": [
        "vendor:koodimonni-language"
      ],
      "web/app/languages/plugins/": [
        "vendor:koodimonni-plugin-language"
      ],
      "web/app/languages/themes/": [
        "vendor:koodimonni-theme-language"
      ]
    },
    "wordpress-install-dir": "web/wp",
    "private-composer-installer": {
      "dotenv-path": ".",
      "dotenv-name": ".env"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@setup"
    ],
    "post-install-cmd": [
      "@setup",
      "@configure-ssp",
      "@fix-kinsta",
      "@fix-plausible"
    ],
    "post-update-cmd": [
      "@configure-ssp",
      "@fix-kinsta",
      "@fix-plausible"
    ],
    "setup": "if [ ! -e .env ]; then cp .env.dist .env; fi;if [ ! -e wp-cli.yml ]; then cp wp-cli.yml.dist wp-cli.yml; fi",
    "configure-ssp": "cd web/app/plugins/frocentric;composer install;cd ../../../..",
    "fix-kinsta": "[ -d \"web/app/mu-plugins/kinsta-mu-plugins/kinsta-mu-plugins\" ] && find web/app/mu-plugins/kinsta-mu-plugins ! -name 'kinsta-mu-plugins' -type d -maxdepth 1 -exec rm -rf {} \\; && mv -f web/app/mu-plugins/kinsta-mu-plugins/kinsta-mu-plugins.php web/app/mu-plugins && mv -f web/app/mu-plugins/kinsta-mu-plugins/kinsta-mu-plugins/* web/app/mu-plugins/kinsta-mu-plugins && rm -rf web/app/mu-plugins/kinsta-mu-plugins/kinsta-mu-plugins || true",
    "fix-plausible": "if [ -e web/app/plugins/plausible-analytics/mu-plugin/plausible-proxy-speed-module.php ]; then cp web/app/plugins/plausible-analytics/mu-plugin/plausible-proxy-speed-module.php web/app/mu-plugins/; fi;",
    "cs": "phpcs --standard=phpcs.xml ./web/app/plugins/frocentric ./web/app/plugins/frocentric-elementor-extension ./web/app/themes/frocentric ./web/app/themes/frocentric-tech",
    "cbf": "phpcbf --standard=phpcs.xml ./web/app/plugins/frocentric ./web/app/plugins/frocentric-elementor-extension ./web/app/themes/frocentric ./web/app/themes/frocentric-tech",
    "test": [
      "codecept run"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
